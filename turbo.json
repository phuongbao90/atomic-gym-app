{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["JAVA_HOME", "ANDROID_NDK", "ANDROID_SDK", "ANDROID_HOME"],
  "globalDependencies": [".env.development"],

  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "outputs": ["dist/**"],
      "cache": false,
      "persistent": true,
      "env": ["API_URL"]
    }
  }
}
