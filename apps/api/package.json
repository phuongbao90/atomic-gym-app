    "class-validator": "^0.14.1",
    "dotenv-cli": "^7.4.4",
    "joi": "^17.13.3",
    "minio": "^8.0.2",
    "nestjs-minio": "^2.6.2",
    "nestjs-minio-client": "^2.2.0",
